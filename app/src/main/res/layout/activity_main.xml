<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray"
        android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="visible">

        <TextView
                android:id="@+id/tv_wheel"
                style="@style/common_text_style"
                android:text="滚轮" />

        <TextView
                android:id="@+id/tv_drag_sort_scroll"
                style="@style/common_text_style"
                android:text="拖拽排序"/>

        <TextView
                android:id="@+id/tv_code"
                style="@style/common_text_style"
                android:text="验证码" />

        <TextView
                android:id="@+id/tv_color"
                style="@style/common_text_style"
                android:text="颜色选择" />

        <TextView
                android:id="@+id/tv_left_scroll"
                style="@style/common_text_style"
                android:text="左滑删除" />

        <TextView
                android:id="@+id/tv_pan"
                style="@style/common_text_style"
                android:text="仪表盘" />

        <TextView
                android:id="@+id/tv_countdown"
                style="@style/common_text_style"
                android:text="倒计时" />

        <TextView
                android:id="@+id/tv_download"
                style="@style/common_text_style"
                android:text="下载" />

        <TextView
                android:id="@+id/tv_device"
                style="@style/common_text_style"
                android:text="设备" />

        <TextView
                android:id="@+id/tv_liandong"
                style="@style/common_text_style"
                android:text="联动" />

        <TextView
                android:id="@+id/tv_people"
                style="@style/common_text_style"
                android:text="根据色值判断点击事件" />

        <TextView
                android:id="@+id/tv_progress"
                style="@style/common_text_style"
                android:text="进度条" />

        <TextView
                android:id="@+id/tv_anim"
                style="@style/common_text_style"
                android:text="动画" />

        <TextView
                android:id="@+id/tv_black_white"
                style="@style/common_text_style"
                android:text="黑白化"/>

        <TextView
                android:id="@+id/tv_audio"
                style="@style/common_text_style"
                android:text="录音"/>

    </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>